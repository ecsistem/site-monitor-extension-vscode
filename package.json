{
  "name": "site-monitor",
  "displayName": "Site Monitor",
  "description": "Monitor de Sites para o VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "site-monitor.addSite",
        "title": "Adicionar Site"
      },
      {
        "command": "site-monitor.checkSiteStatus",
        "title": "Verificar Status do Site"
      },
      {
        "command": "site-monitor.removeSite", 
        "title": "Remover Site"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "site-monitor.sites",
          "name": "Sites Monitorados"
        }
      ]
    },
    "menus": {
      "tree/context": [
        {
          "command": "site-monitor.removeSite",
          "when": "viewItem == site-monitor.sites"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Configurações do Site Monitor",
      "properties": {
        "site-monitor.refreshInterval": {
          "type": "number",
          "default": 300000,
          "description": "Intervalo de atualização em milissegundos para verificar o status dos sites monitorados."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "vscode": "^1.1.37"
  }
}
